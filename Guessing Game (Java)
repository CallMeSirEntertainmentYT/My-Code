import java.util.Scanner;
import java.util.Random;

public class GuessingGame {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        Random rand = new Random();

        System.out.println("Guessing Game");
        System.out.println("By: CallMeSirEntertainment\n");

        System.out.print("Would you like to play? (y/n) ");
        String play_again_input = input.nextLine();
        boolean play_again = play_again_input.toLowerCase().equals("y");

        if (!play_again) {
            System.out.println("\nWhy did you run this program then?");
        }

        while (play_again) {
            System.out.print("Choose a level of difficulty (easy, normal, hard, insane):\n");
            String level = input.nextLine();
            int max_number, tries;

            switch (level) {
                case "easy":
                    max_number = 100;
                    tries = 15;
                    break;
                case "normal":
                    max_number = 100;
                    tries = 10;
                    break;
                case "hard":
                    max_number = 200;
                    tries = 10;
                    break;
                case "insane":
                    max_number = 200;
                    tries = 5;
                    break;
                default:
                    System.out.println("Invalid level of difficulty. Please choose again.");
                    continue;
            }

            System.out.printf("\nI'm thinking of a number between 1 and %d.\n", max_number);
            System.out.printf("You have %d tries to guess the number.\n", tries);
            int number = rand.nextInt(max_number) + 1;

            for (int i = 0; i < tries; i++) {
                System.out.print("\nEnter your guess: ");
                int guess = input.nextInt();

                if (guess < number) {
                    System.out.println("\nToo low. Try again.");
                } else if (guess > number) {
                    System.out.println("\nToo high. Try again.");
                } else {
                    System.out.printf("\nCongratulations! You guessed the number in %d tries.\n", i + 1);
                    break;
                }
            }

            System.out.printf("\nSorry, you ran out of tries. \nThe number was %d.\n", number);

            System.out.print("\nWould you like to play again? (y/n) ");
            play_again_input = input.next();
            play_again = play_again_input.toLowerCase().equals("y");

            if (!play_again) {
                System.out.println("\nThank you for playing!");
            }
        }
    }
}
